    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "engines": {
    "node": "15.9.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn watch-server\" \"yarn watch-client\"",
    "heroku-postbuild": "yarn --cwd client && yarn --cwd client build",
    "postinstall": "tsc --outDir dist",
    "prepare": "husky install",
    "start": "node dist/index.js",
    "test": "jest && yarn --cwd client test --watchAll=false",
    "test-client": "yarn --cwd client test",
    "test-server": "jest --watch",
    "watch-client": "yarn --cwd client start",
    "watch-server": "nodemon index.ts"
  }
